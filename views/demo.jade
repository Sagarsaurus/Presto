extends demoLayout
block content
   div(id='map')
   div.topContainer
      div.ui.grid
         div.ui.one.column.row
            div.column
               input.ui.black.button(type="button", value="Explore Your Surroundings", onclick="getLocation()", id ="topBar")
         div.ui.five.column.row
            div.column
               input.ui.inverted.blue.button(type="button", value = "Food", id ="food")
            div.column
               input.ui.inverted.orange.button(type="button", value = "News", id ="news")
            div.column
               input.ui.inverted.green.button(type="button", value = "Events", id ="events")
            div.column
               input.ui.inverted.red.button(type="button", value = "Lodging", id ="lodging")
            div.column
               input.ui.inverted.purple.button(type="button", value = "Deals", id ="deals")
         div.ui.one.column.row
            div.sixteen.wide.column(id="infoDiv", style="visibility:hidden;")
               div.ui.cube.shape(id="cubeShape")
                  div.sides
                     div.active.side(id="foodContent")
                        div.content(id="foodContentLocation")
                     div.side(id="newsContent")
                        div.content(id="newsContentLocation")
                     div.side(id="eventContent")
                        div.content(id="eventContentLocation")
                     div.side(id="lodgingContent")
                        div.content(id="lodgingContentLocation")
                     div.side(id="dealContent")
                        div.content(id="dealContentLocation")
   script.
      $('#food').click(function () {
         $(".shape")
                 .shape('set next side', '#foodContent')
                 .shape('flip right');
      });
      $('#news').click(function () {
         $('.shape')
                 .shape('set next side', '#newsContent')
                 .shape('flip right');
      });
      $('#events').click(function () {
         $('.shape')
                 .shape('set next side', '#eventContent')
                 .shape('flip right');
      });
      $('#lodging').click(function () {
         $('.shape')
                 .shape('set next side', '#lodgingContent')
                 .shape('flip right');
      });
      $('#deals').click(function () {
         $('.shape')
                 .shape('set next side', '#dealContent')
                 .shape('flip right');
      });